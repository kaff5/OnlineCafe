@model OnlineCafe.ViewModels.CardDishesViewModels

@{
	ViewData["Title"] = "Корзина";
}

<div class="row">
	<div class="col-12">
		<h1>Товары в корзине</h1>

		<ol class="list-group list-group-numbered">
			@foreach (var meal in Model.meals)
			{
				<li class="list-group-item d-flex justify-content-between align-items-start">
					<div class="ms-2 me-auto">
						<div class="fw-bold">@meal.Name<span class="badge bg-primary rounded-pill ms-3">@meal.Count</span></div>
					</div>
					<a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Cart" asp-route-id="@meal.Id">Удалить</a>
				</li>
			}
			@if (Model.meals.Any())
			{
				<a asp-action="Create" asp-controller="Orders" class="btn btn-success">Оформить</a>
			}
			else
			{
				<div class="card w-100" style="background: #d1ecf1; padding: 10px; display: flex; flex-direction: row; justify-content: center;">
					<p class="my-auto">Блюд в корзине нет, поэтому оформить заказ невозможно</p>
				</div>
			}
		</ol>
	</div>
</div>
